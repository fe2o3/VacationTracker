<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rusty.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.VacationEntryActivity"
            android:label="@string/title_activity_vacation_entry"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rusty.myapplication.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.SickEntryActivity"
            android:label="@string/title_activity_sick_entry"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rusty.myapplication.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.SickHoursSetupActivity"
            android:label="@string/title_activity_sick_hours_setup"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rusty.myapplication.view.MainActivity" />
        </activity>
    </application>

</manifest>
